<div id="content" ng-controller="DisplayReservationGridController" ng-init="Init('@ViewBag.LoggedUser.AgentId','@ViewBag.LoggedUser.GroupId')">
    <div id="loader" class="preloader-area">
        <div class="spinner-gears"></div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-th"></i>
                Display Reservation
            </h1>
        </div>
    </div>
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-0"
                     data-widget-colorbutton="false"
                     data-widget-editbutton="false">
                    <div>
                        <div class="widget-body">
                            <div class="table-responsive">
                                <div ng-show="ReservationCollection==null">
                                    <levelquote>
                                        <small> <cite>- No records found -</cite></small>
                                    </levelquote>
                                </div>
                                <table id="datatable_col_reorder" class="table table-striped table-bordered table-hover" ng-show="ReservationCollection!=null">
                                    <thead>
                                        <tr>
                                            <th class="centerit">Agent Name</th>
                                            <th class="centerit">Reser. Item Name</th>
                                            <th class="centerit">Category Name</th>
                                            <th class="centerit">Time Range</th>
                                            <th class="centerit">Date Range</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="ng-cloak" ng-repeat="Reservations in ReservationCollection" ng-cloak>
                                            <td>
                                                {{Reservations.AgentName}}
                                                <img src="{{Reservations.AgentImg}}" alt="" height=100 width=100 />
                                            </td>
                                            <td>{{Reservations.ResItemName}}</td>
                                            <td>{{Reservations.CategoryName}}</td>
                                            <td>{{Reservations.StartTime}} to {{Reservations.EndTime}}</td>
                                            <td>{{Reservations.StartDate | date : date-format}} to {{Reservations.EndDate | date : date-format}}</td>
                                            <td>
                                                <a href="" class="btn btn-danger btn-outline btn-circle m-r-5" data-toggle="tooltip" data-placement="top" ng-click="DeleteReservedItem(Reservations.Id)"> <i class="fa fa-times"></i></a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>
            <!-- WIDGET END -->

        </div>
        <!-- end row -->
    </section>

</div>

@section pagespecific{
    <!-- PAGE RELATED PLUGIN(S) -->
    <script src="~/Scripts/commercepromote/controllers/bookingclient.displayReservation.controller.js"></script>
    <script src="~/Content/js/plugin/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/js/plugin/datatables/dataTables.colVis.min.js"></script>
    <script src="~/Content/js/plugin/datatables/dataTables.tableTools.min.js"></script>
    <script src="~/Content/js/plugin/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/js/plugin/datatables/dataTables.colReorder.min.js"></script>
    <script src="~/Content/js/plugin/datatable-responsive/datatables.responsive.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#datatable_col_reorder').DataTable({
                scrollY: "300px",
                scrollX: true,
                scrollCollapse: true,
                paging: true,
                fixedColumns: {
                    leftColumns: 1,
                    rightColumns: 1
                }
            });
        });


        function DeleteSuccess() {
            $.smallBox({
                title: "You have successfully deleted the booking !",
                content: "<i class='fa fa-clock-o'></i> <i>1 seconds ago...</i>",
                color: "#10ac84",
                iconSmall: "fa fa-thumbs-up bounce animated",
                timeout: 8000
            });

        }

    </script>
}
